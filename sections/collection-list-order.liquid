    {% for order in section.blocks %}
      <div class="custom-order-container custom-order-desktop">
        <div class="custom-order-left">
          <div class="custom-order-left-checkbox">
            <input type="checkbox">
          </div>
          <div class="custom-order-left-image">
            <a href="#">
              <img alt="image {{ order.settings.product_name }}" src="{{ order.settings.image | img_url : 'master' }}">
            </a>
          </div>
        </div>
        <div class="custom-order-right">
          <div class="custom-order-right-row">
            <div class="custom-order-right-row-col-1">
              <span class="custom-order-product-name">{{ order.settings.product_name }}</span>
              <span><img alt="rating" src="{{ order.settings.rating | img_url : 'master' }}"></span>
              <span class="custom-order-quantity">Quantity: {{ order.settings.quantity }}</span>
            </div>
            <div class="custom-order-right-row-col-2">
              <span class="custom-order-transaction">Total Transactions</span>
            </div>
          </div>
          <div class="custom-order-right-row">
            <div class="custom-order-right-row-col-1">
              <a href="#" class="text-theme-text inline-flex card__collection--arrow custom-order-arrow">
                +3 other items on same transactions
                <span class="has-ltr-icon flex items-center mis-2">
                  {%- render 'icon-arrow-in-circle' -%}
                </span>
              </a>
            </div>
            <div class="custom-order-right-row-col-2">
              <span class="custom-order-price">
                ${{ order.settings.price }}
              </span>
            </div>
          </div>
          <div class="custom-order-right-bottom">
            <div class="custom-order-right-row-col-1">
              <h3 class="custom-order-id">ID:
                <span class="custom-order-id-text">trgdu-hjju4578</span>
              </h3>
              <span>
                <a href="#">
                  <buttom class="btn--primary custom-order-bottom-1">View invoice</buttom>
                </a>
              </span>
              <span>
                <a href="#">
                  <buttom class="btn--primary custom-order-bottom-2">View transaction details</buttom>
                </a>
              </span>
            </div>
            <div class="custom-order-right-row-col-2">
              <span class="custom-order-time">23 August 2023 | 15;34 PST</span>
            </div>
          </div>
        </div>
      </div>
      <div class="custom-order-mobile-container custom-order-mobile">
        <div class="custom-order-mobile-left">
          <input type="checkbox">
        </div>
        <div class="custom-order-mobile-right">
          <div class="custom-order-mobile-right-row">
            <div class="custom-order-mobile-right-col-1">
              <a href="#">
                <img alt="image {{ order.settings.product_name }}" src="{{ order.settings.image | img_url : 'master' }}">
              </a>
            </div>
            <div class="custom-order-mobile-right-col-2">
              <p class="custom-order-transaction">Total Transactions</p>
              <h3 class="custom-order-price">
                ${{ order.settings.price }}
              </h3>
            </div>
          </div>
          <div class="custom-order-mobile-right-row mt-5">
            <span class="custom-order-product-name">{{ order.settings.product_name }}<img
                alt="rating"
                src="{{ order.settings.rating | img_url : 'master' }}"
                style="margin-left: 2rem;"></span>
          </div>
          <div class="custom-order-mobile-right-row mt-3">
            <span class="custom-order-quantity">Quantity: {{ order.settings.quantity }}</span>
          </div>
          <div class="custom-order-mobile-right-row mt-5">
            <a href="#" class="text-theme-text inline-flex card__collection--arrow custom-order-arrow">
              +3 other items on same transactions
              <span class="has-ltr-icon flex items-center mis-2">
                {%- render 'icon-arrow-in-circle' -%}
              </span>
            </a>
          </div>
          <div class="custom-order-mobile-right-row mt-5">
            <span class="custom-order-time">23 August 2023 | 15;34 PST</span>
          </div>
          <div class="custom-order-mobile-right-row mt-3">
            <h3 class="custom-order-id">ID:
              <span class="custom-order-id-text">trgdu-hjju4578</span>
            </h3>
          </div>
          <div class="custom-order-mobile-right-row mt-3">
            <a href="#">
              <buttom class="btn--primary custom-order-bottom-1">View invoice</buttom>
            </a>
          </div>
          <div class="custom-order-mobile-right-row" style="margin-top: 1rem;">
            <a href="#">
              <buttom class="btn--primary custom-order-bottom-2">View transaction details</buttom>
            </a>
          </div>
        </div>
      </div>
    {% endfor %}

    <div class="custom-cart-footer" style="margin-bottom: 60px;">
      <button class="btn btn--primary custom-clear-all">
        Clear All
      </button>
      <button class="btn btn--primary btn--icon-with-text w-full custom-cart-checkout" name="checkout">
        Re-order this item
      </button>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Collection Order",
    "tag": "section",
    "class": "cc-collection-list",
    "max_blocks": 16,
    "settings": [
      {
        "type": "header",
        "content": "Section header"
      }, {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collections"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Replaces the collection image"
          },
          {
            "type": "text",
            "id": "product_name",
            "label": "Product Name",
            "default": "Ferrules"
          },
          {
            "type": "image_picker",
            "id": "rating",
            "label": "Rate",
            "info": "Replaces the rating image"
          }, {
            "type": "number",
            "id": "quantity",
            "label": "Quantity",
            "default": 1
          }, {
            "type": "number",
            "id": "price",
            "label": "Price",
            "default": 599
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection Order",
        "blocks": [
          {
            "type": "collection"
          }, {
            "type": "collection"
          }, {
            "type": "collection"
          }, {
            "type": "collection"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": ["header", "footer", "aside"]
    }
  }
{% endschema %}